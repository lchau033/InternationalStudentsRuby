<% stylesheet 'page_specific/avatar.css' %>
<% stylesheet 'page_specific/profile' %>

<div class="container">
  <div class="page-header">
    <div id="profileTitle">
      <h1 class="text-center"><%= t(".profile_title") %></h1>
    </div>
  </div>

  <div id="profile">
    <div class="row" style="padding-bottom: 100px;
    ">
      <div class="col-lg-3 col-md-3">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="media">
              <div align="center">
                <%= show_avatar(@user) %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-9 col-md-9">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="media">
              <div class="media-body">
                <div row>
                  <div class="col-lg-4 col-md-4">
                    <h2><%= t(".name") %></h2>
                    <p><%= current_user.name %></p>
                    <hr>
                  </div>
                  <div class="col-lg-4 col-md-4">
                    <h2><%= t(".email") %></h2>
                    <p><%= current_user.email %></p>
                    <hr>
                  </div>
                  <div class="col-lg-4 col-md-4">
                    <h2><%= t(".country") %></h2>
                    <p><%= @user.country_name(current_user.country) %></p>
                    <hr>
                  </div>
                </div>
                <div row>
                  <div class="col-lg-4 col-md-4">
                    <h2><%= t(".province") %></h2>
                    <p><%= current_user.current_province %></p>
                    <hr>
                  </div>
                  <div class="col-lg-4 col-md-4">
                    <h2><%= t(".dateOfEntry") %></h2>
                    <p><%= current_user.date_of_entry %></p>
                    <hr>
                  </div>
                </div>
                <div row>
                  <div class="col-lg-12 col-md-12">
                    <h2><%= t(".bio") %></h2>
                    <p><%= @user.bio %></p>
                    <hr>
                  </div>
                </div>
                <div row>
                  <div class="col-lg-12 col-md-12">
                    <%= link_to t(".edit_profile"), profile_edit_path, class: "btn red-standard-btn"%>
                    <%= link_to t(".edit_notifications"), notification_edit_path, class: "btn red-standard-btn"%>
                  </div>
              </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

