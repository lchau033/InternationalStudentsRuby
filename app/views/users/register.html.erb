<% stylesheet 'page_specific/country_select' %>
<!-- Separate Registration Page -->
<div class="container">
  <div class="page-header">
    <h1 class="form-title text-center"><%= t '.signupTitle' %></h1>
  </div>
  <div class="signup">
    <%= form_for @user do |f| %>

        <div class="form-group col-md-6 col-sm-offset-3" >
          <%= f.label t(".name") %>
          <%= f.text_field :name, class: 'form-control',  required: true %>
        </div>
        <div class="form-group col-md-6 col-sm-offset-3">
          <%= f.label t(".email") %>
          <%= f.email_field :email, class: 'form-control', required: true %>
        </div>
        <div class="form-group col-md-6 col-sm-offset-3">
          <%= f.label t(".password") %>
          <%= f.password_field :password, class: 'form-control', required: true %>
        </div>
        <div class="form-group col-md-6 col-sm-offset-3">
          <%= f.label t(".password_confirmation") %>
          <%= f.password_field :password_confirmation, class: 'form-control', required: true%>
        </div>
        <div class="form-group col-md-6 col-sm-offset-3">
          <%= f.label t(".country") %>
          <%= f.country_select :country, {locale: I18n.locale}, {class: 'form-control turnintodropdown' }%>
        </div>
        <div class="form-group col-md-6 col-sm-offset-3">
             <%= f.check_box :subscribed,style: 'width:10%;height:17px' %>
             <%= f.label :subscribed,  t(".subscribe") %>
        </div>
        <div class="form-group form-button col-md-2 col-md-offset-5" style="text-align: center;">
          <%= f.submit t(".submit") , class: 'btn red-standard-btn', style: 'margin:40px 0;' %>
        </div>
    <% end %>
  </div>
</div>
