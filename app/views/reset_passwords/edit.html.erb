<div class="page-header">
  <div id="profileTitle">
    <h1 class="text-center"><%= t(".title") %></h1>
  </div>
</div>

<div class="signup">
  <%= form_for @user, url: reset_password_path(@token), method: :patch do |f| %>

      <div class="form-group col-md-6 col-sm-offset-3">
        <%= f.label t(".password") %>
        <%= f.password_field :password, class: 'form-control', required: true %>
      </div>

      <div class="form-group col-md-6 col-sm-offset-3">
        <%= f.label t(".password_confirmation") %>
        <%= f.password_field :password_confirmation, class: 'form-control', required: true%>
      </div>

      <div class="form-group form-button col-md-2 col-md-offset-5" style="text-align: center;">
        <%= f.submit t(".set_password"), class: 'btn red-standard-btn', style: 'margin:40px 0;' %>
      </div>
  <% end %>
</div>

